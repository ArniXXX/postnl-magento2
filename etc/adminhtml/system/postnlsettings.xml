<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">

    <group id="postnl_settings" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>PostNL settings</label>
        <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
        <fieldset_css>tig_postnl-section</fieldset_css>

        <group id="shipping_settings" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Shipping</label>
            <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
            <fieldset_css>tig_postnl-sub-section</fieldset_css>

            <field id="shipping_duration" translate="label comment" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Shipping Duration</label>
                <comment><![CDATA[The number of days that it takes for the order to be shipped after the order is placed.]]></comment>
                <source_model>TIG\PostNL\Config\Source\Settings\ShippingDuration</source_model>
                <config_path>tig_postnl/webshop_shipping/shipping_duration</config_path>
            </field>

            <field id="cutoff_time" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Cutoff time</label>
                <comment><![CDATA[When an order is placed after this time, another day will be added to the shipping duration.]]></comment>
                <source_model>TIG\PostNL\Config\Source\Settings\CutOffSettings</source_model>
                <config_path>tig_postnl/webshop_shipping/cutoff_time</config_path>
            </field>

            <field id="saturday_cutoff_time" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Saturday cutoff time</label>
                <comment><![CDATA[When an order is placed after this time, another day will be added to the shipping duration.]]></comment>
                <source_model>TIG\PostNL\Config\Source\Settings\CutOffSettings</source_model>
                <config_path>tig_postnl/webshop_shipping/saturday_cutoff_time</config_path>
            </field>

            <field id="sunday_cutoff_time" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Sunday cutoff time</label>
                <comment><![CDATA[When an order is placed after this time, another day will be added to the shipping duration.]]></comment>
                <source_model>TIG\PostNL\Config\Source\Settings\CutOffSettings</source_model>
                <config_path>tig_postnl/webshop_shipping/sunday_cutoff_time</config_path>
            </field>

            <field id="shipment_days" translate="label" type="multiselect" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Shipment days</label>
                <comment><![CDATA[Select on which days of the week orders are shipped. You can read more about shipping and delivery days <a href="https://servicedesk.tig.nl/hc/nl/articles/115003398667" target="_blank" title="PostNL shipping days">here</a>.]]></comment>
                <source_model>TIG\PostNL\Config\Source\Settings\DaysOfWeek</source_model>
                <config_path>tig_postnl/webshop_shipping/shipment_days</config_path>
            </field>



            <group id="labelandpackingslipoptions" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Label and packingslip options</label>
                <fieldset_css>tig_postnl-sub-section</fieldset_css>

                <field id="reference_type" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Shipment reference type</label>
                    <comment><![CDATA[Select what to use as a shipment's reference. This will be printed on the shipping label.]]></comment>
                    <source_model>TIG\PostNL\Config\Source\LabelAndPackingslip\ReferenceType</source_model>
                    <config_path>tig_postnl/labelandpackingslipoptions/reference_type</config_path>
                </field>

                <field id="custom_shipment_reference" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Custom reference value</label>
                    <tooltip><![CDATA[You can use this field to, for example, add a prefix to the shipment increment ID or to help identify the shipment as coming from your webshop. You can use the following variables: {{var shipment_increment_id}}, {{var order_increment_id}} and {{var store_frontend_name}}. The resulting text may not exceed 28 characters.]]></tooltip>
                    <config_path>tig_postnl/labelandpackingslipoptions/custom_shipment_reference</config_path>
                    <depends>
                        <field id="reference_type">custom</field>
                    </depends>
                </field>

                <field id="show_label" translate="label tooltip comment" type="radios" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Show shipping label</label>
                    <comment><![CDATA[Printing a custom (like Fooman) packingslip including the PostNL labels is not supported yet.]]></comment>
                    <tooltip><![CDATA[If you select 'on the same page' in some cases the shipping label may not fit. In this case, the shipping label will be printed on a separate page instead.]]></tooltip>
                    <source_model>TIG\PostNL\Config\Source\LabelAndPackingslip\ShowShippingLabel</source_model>
                    <config_path>tig_postnl/labelandpackingslipoptions/show_label</config_path>
                </field>

                <field id="enable_barcode" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Enable barcode on Packingslip</label>
                    <comment><![CDATA[This will print a barcode on the packingslip.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>tig_postnl/labelandpackingslipoptions/enable_barcode</config_path>
                </field>

                <group id="barcode_settings" translate="label" type="text" sortOrder="45" showInDefault="1" showInStore="0" showInWebsite="1">
                    <label>Barcode settings</label>
                    <fieldset_css>tig_postnl-sub-section</fieldset_css>
                    <field id="value" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInStore="0" showInWebsite="1">
                        <label>Value for barcode</label>
                        <comment><![CDATA[Select what to use as value for the barcode. If you select shipment ID, be aware that this only will work if you combine the print packingslip and create shipment methods.]]></comment>
                        <source_model>TIG\PostNL\Config\Source\LabelAndPackingslip\BarcodeValue</source_model>
                        <config_path>tig_postnl/labelandpackingslipoptions/barcode_value</config_path>
                    </field>

                    <field id="position" translate="label tooltip" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Position of the barcode</label>
                        <tooltip><![CDATA[The position must contain four coordinates (x1, y1, x2, y2) given as string.]]></tooltip>
                        <config_path>tig_postnl/labelandpackingslipoptions/barcode_position</config_path>
                    </field>

                    <field id="type" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                        <label>Barcode Type</label>
                        <source_model>TIG\PostNL\Config\Source\LabelAndPackingslip\BarcodeType</source_model>
                        <config_path>tig_postnl/labelandpackingslipoptions/barcode_type</config_path>
                    </field>

                    <field id="background_color" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Background color</label>
                        <comment><![CDATA[Color of the background.]]></comment>
                        <config_path>tig_postnl/labelandpackingslipoptions/background_color</config_path>
                        <frontend_model>\TIG\PostNL\Block\Adminhtml\Config\Form\Field\Color</frontend_model>
                    </field>

                    <field id="barcode_color" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Barcode color</label>
                        <comment><![CDATA[Color of the barcode and the text.]]></comment>
                        <config_path>tig_postnl/labelandpackingslipoptions/barcode_color</config_path>
                        <frontend_model>\TIG\PostNL\Block\Adminhtml\Config\Form\Field\Color</frontend_model>
                    </field>

                    <field id="include_number" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                        <label>Include value</label>
                        <comment><![CDATA[Print the line of numbers underneath the barcode pattern.]]></comment>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>tig_postnl/labelandpackingslipoptions/barcode_numberinclude</config_path>
                    </field>

                    <depends>
                        <field id="tig_postnl/webshop/labelandpackingslipoptions/enable_barcode">1</field>
                    </depends>
                </group>
            </group>
        </group>


        <!--Shipping options combined with product options -->
        <group id="delivery_settings" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Delivery</label>
            <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
            <fieldset_css>tig_postnl-sub-section</fieldset_css>

            <field id="shippingoptions_active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Activate shipping options -> Activate delivery settings</label>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <config_path>tig_postnl/shippingoptions/shippingoptions_active</config_path>
            </field>

             <field id="default_option" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                <label>Default shipping option -> Default delivery</label>
                <comment><![CDATA[Select the default product option for domestic shipments.]]></comment>
                <source_model>TIG\PostNL\Config\Source\Options\ProductOptions::getDefaultOptions</source_model>
                <config_path>tig_postnl/productoptions/default_option</config_path>
            </field>

            <field id="use_alternative_default" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                <label>Use an alternative default option -> Activate alternative delivery</label>
                <comment><![CDATA[Enable this to use an alternative default option when a shipment's total value reaches a certain amount.]]></comment>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <config_path>tig_postnl/productoptions/use_alternative_default</config_path>
            </field>

            <field id="alternative_default_min_amount" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Minimum amount</label>
                <comment><![CDATA[The alternative default option will be used from this value.]]></comment>
                <backend_model>TIG\PostNL\Config\Validator\Fee</backend_model>
                <config_path>tig_postnl/productoptions/alternative_default_min_amount</config_path>
                <depends>
                    <field id="use_alternative_default">1</field>
                </depends>
            </field>

            <field id="alternative_default_option" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Alternative default shipping option -> Alternative delivery</label>
                <comment><![CDATA[This option will be used as default from the given amount.]]></comment>
                <source_model>TIG\PostNL\Config\Source\Options\ProductOptions::getDefaultOptions</source_model>
                <config_path>tig_postnl/productoptions/alternative_default_option</config_path>
                <depends>
                    <field id="use_alternative_default">1</field>
                </depends>
            </field>

             <!-- Stock -->

             <group id="stock_settings" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Stock Settings</label>
                <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
                <fieldset_css>tig_postnl-sub-sub-section</fieldset_css>

                 <field id="stockoptions" translate="label" type="radios" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Stock options</label>
                    <comment><![CDATA[Select for which products PostNL delivery options should be available.]]></comment>
                    <source_model>TIG\PostNL\Config\Source\Options\StockOptions</source_model>
                    <config_path>tig_postnl/shippingoptions/stockoptions</config_path>
                    <depends>
                        <field id="shippingoptions_active">1</field>
                    </depends>
                </field>
             </group>

             <!-- Delivery Days -->

             <group id="delivery_days" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Delivery Days</label>
                <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
                <fieldset_css>tig_postnl-sub-sub-section</fieldset_css>

                 <field id="deliverydays_active" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Activate delivery days</label>
                    <comment><![CDATA[Delivery days allow customers to choose on which date they want their order delivered.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>tig_postnl/shippingoptions/deliverydays_active</config_path>
                    <depends>
                        <field id="shippingoptions_active">1</field>
                    </depends>
                </field>

                <field id="max_deliverydays" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Maximum number of delivery days</label>
                    <comment><![CDATA[Submit how many days in the future after the first delivery moment your customers can choose to receive their orders.]]></comment>
                    <source_model>TIG\PostNL\Config\Source\Options\DeliverydaysOptions</source_model>
                    <config_path>tig_postnl/shippingoptions/max_deliverydays</config_path>
                    <depends>
                        <field id="shippingoptions_active">1</field>
                        <field id="deliverydays_active">1</field>
                    </depends>
                </field>
             </group>

             <!-- Post Offices -->

             <group id="post_offices" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Post Offices</label>
                <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
                <fieldset_css>tig_postnl-sub-sub-section</fieldset_css>

                 <field id="pakjegemak_active" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Activate post office locations</label>
                    <comment><![CDATA[Whether or not customers may choose to have their order delivered to a nearby post office.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>tig_postnl/shippingoptions/pakjegemak_active</config_path>
                    <depends>
                        <field id="shippingoptions_active">1</field>
                    </depends>
                 </field>

                 <field id="pakjegemak_express_active" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Activate early delivery post office locations</label>
                    <comment><![CDATA[Activate early delivery locations for your customers. Read more about <a href="https://servicedesk.tig.nl/hc/nl/articles/115004296048/" target="_blank" title="early delivery">early delivery</a>.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>tig_postnl/shippingoptions/pakjegemak_express_active</config_path>
                    <depends>
                        <field id="pakjegemak_active">1</field>
                        <field id="shippingoptions_active">1</field>
                    </depends>
                 </field>

                 <field id="pakjegemak_express_fee" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Early delivery fee</label>
                    <comment><![CDATA[Additional costs for early delivery in the store's base currency. This fee will be added to the shipping costs.]]></comment>
                    <config_path>tig_postnl/shippingoptions/pakjegemak_express_fee</config_path>
                    <backend_model>TIG\PostNL\Config\Validator\Fee</backend_model>
                    <depends>
                        <field id="pakjegemak_active">1</field>
                        <field id="pakjegemak_express_active">1</field>
                        <field id="shippingoptions_active">1</field>
                    </depends>
                 </field>


                 <field id="default_pakjegemak_option" translate="label" type="select" sortOrder="80" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Default post office delivery option -> Post office delivery</label>
                    <comment><![CDATA[Select the default product option for postoffice delivery shipments.]]></comment>
                    <source_model>TIG\PostNL\Config\Source\Options\ProductOptions::getPakjeGemakOptions</source_model>
                    <config_path>tig_postnl/productoptions/default_pakjegemak_option</config_path>
                    <depends>
                        <field id="tig_postnl/shippingoptions/pakjegemak_active">1</field>
                    </depends>
                </field>

                <field id="default_pakjegemak_early_option" translate="label" type="select" sortOrder="90" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Default postoffice early pickup option -> Post office early delivery </label>
                    <comment><![CDATA[Select the default product option for early pickup option.]]></comment>
                    <source_model>TIG\PostNL\Config\Source\Options\ProductOptions::getPakjeGemakEarlyDeliveryOptions</source_model>
                    <config_path>tig_postnl/productoptions/default_pakjegemak_early_option</config_path>
                    <depends>
                        <field id="tig_postnl/shippingoptions/pakjegemak_active">1</field>
                    </depends>
                </field>

             </group>



             <!-- Evening Delivery -->

             <group id="evening_delivery" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Evening Delivery</label>
                <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
                <fieldset_css>tig_postnl-sub-sub-section</fieldset_css>


                 <!-- Evening Delivery NL -->
                 <group id="evening_delivery_nl" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Evening Delivery NL</label>
                    <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
                    <fieldset_css>tig_postnl-sub-sub-sub-section</fieldset_css>

                         <field id="eveningdelivery_active" translate="label" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                            <label>Activate evening delivery</label>
                            <comment><![CDATA[Activate evening delivery for your customers. Read more about <a href="https://servicedesk.tig.nl/hc/nl/articles/115004298488" target="_blank" title="evening delivery">evening delivery</a>.]]></comment>
                            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                            <config_path>tig_postnl/shippingoptions/eveningdelivery_active</config_path>
                            <depends>
                                <field id="shippingoptions_active">1</field>
                                <field id="deliverydays_active">1</field>
                            </depends>
                        </field>

                        <field id="eveningdelivery_fee" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                            <label>Eveningdelivery fee</label>
                            <comment><![CDATA[Additional costs for evening delivery in the store's base currency. This fee will be added to the shipping costs.]]></comment>
                            <config_path>tig_postnl/shippingoptions/eveningdelivery_fee</config_path>
                            <backend_model>TIG\PostNL\Config\Validator\Fee</backend_model>
                            <depends>
                                <field id="shippingoptions_active">1</field>
                                <field id="eveningdelivery_active">1</field>
                                <field id="deliverydays_active">1</field>
                            </depends>
                        </field>

                       <field id="default_evening_option" translate="label" type="select" sortOrder="95" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                            <label>Default evening option -> Evening delivery the Netherlands</label>
                            <comment><![CDATA[Select the default product option for evening delivery shipments.]]></comment>
                            <source_model>TIG\PostNL\Config\Source\Options\ProductOptions::getIsEveningOptions</source_model>
                            <config_path>tig_postnl/productoptions/default_evening_option</config_path>
                            <depends>
                                <field id="tig_postnl/shippingoptions/eveningdelivery_active">1</field>
                            </depends>
                        </field>
                 </group>

                 <!-- Evening Delivery BE -->
                 <group id="evening_delivery_be" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Evening Delivery BE</label>
                    <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
                    <fieldset_css>tig_postnl-sub-sub-sub-section</fieldset_css>

                        <field id="eveningdelivery_be_active" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                            <label>Activate evening delivery for Belgium</label>
                            <comment><![CDATA[Activate evening delivery to Belgium for your customers. Read more about <a href="https://servicedesk.tig.nl/hc/nl/articles/115004298488" target="_blank" title="evening delivery">evening delivery</a>.]]></comment>
                            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                            <config_path>tig_postnl/shippingoptions/eveningdelivery_be_active</config_path>
                            <depends>
                                <field id="shippingoptions_active">1</field>
                                <field id="deliverydays_active">1</field>
                            </depends>
                        </field>

                        <field id="eveningdelivery_be_fee" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                            <label>Eveningdelivery for Belgium fee</label>
                            <comment><![CDATA[Additional costs for evening delivery to Belgium in the store's base currency. This fee will be added to the shipping costs.]]></comment>
                            <config_path>tig_postnl/shippingoptions/eveningdelivery_be_fee</config_path>
                            <backend_model>TIG\PostNL\Config\Validator\Fee</backend_model>
                            <depends>
                                <field id="shippingoptions_active">1</field>
                                <field id="eveningdelivery_be_active">1</field>
                                <field id="deliverydays_active">1</field>
                            </depends>
                        </field>

                        <field id="default_evening_be_option" translate="label" type="select" sortOrder="120" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                            <label>Default evening for Belgium option -> Evening delivery Belgium</label>
                            <comment><![CDATA[Select the default product option for evening delivery to Belgium shipments.]]></comment>
                            <source_model>TIG\PostNL\Config\Source\Options\ProductOptions::getIsEveningOptionsBe</source_model>
                            <config_path>tig_postnl/productoptions/default_evening_be_option</config_path>
                            <depends>
                                <field id="tig_postnl/shippingoptions/eveningdelivery_be_active">1</field>
                            </depends>
                        </field>
                 </group>
              </group>

             <!-- Extra at Home -->

             <group id="extra_at_home" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Extra@Home</label>
                    <frontend_model>TIG\PostNL\Block\Adminhtml\Config\Form\Field\Fieldset</frontend_model>
                    <fieldset_css>tig_postnl-sub-sub-section</fieldset_css>

